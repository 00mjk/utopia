{
    "compilerOptions": {
        "outDir": "./dist",
        "declarationDir": "./dist",
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "noImplicitAny": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "strict": true,
        "strictNullChecks": true,
        "alwaysStrict": true,
        "jsx": "react"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
